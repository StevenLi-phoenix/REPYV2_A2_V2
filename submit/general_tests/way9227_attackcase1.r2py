"""
Check if user is allowing basic operations
"""

try:
    f = openfile("base.txt", True)
    f.writeat("hi", 0)
    f.close()
    fr = openfile("base.txt", False)
    data = fr.readat(None, 0)
    fr.close()
    if data != "hi":
        log("Bug: basic file read/write mismatch")
except Exception:
    log("Bug: basic allowed operation was blocked or errored")

